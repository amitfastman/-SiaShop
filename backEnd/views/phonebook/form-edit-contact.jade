extends ../layout

block content
  h1 Edit Contact
  p Edit Contact ##{_id}
    form(action="/phonebook/edit", method="post")
        div.input
            span.label Name
            input(type="text", name="name", value= name)
        div.input
            span.label Phone
            input(type="text", name="phone", value= phone)
        div.actions
            input(type="hidden", name="_id", value= _id)
            input(type="submit", value="save changes")